{
  "name": "orka-ppm-v2",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered Project Portfolio Management System",
  "author": "Stefan",
  "keywords": [
    "ppm",
    "project-management",
    "ai",
    "nextjs",
    "typescript"
  ],
  "scripts": {
    "dev": "next dev --turbo",
    "dev:webpack": "next dev --webpack",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:fast": "next build --no-lint",
    "start": "next start",
    "lint": "eslint --cache --ext .ts,.tsx,.js,.jsx .",
    "lint:fix": "eslint --fix --cache --ext .ts,.tsx,.js,.jsx .",
    "lint:strict": "eslint --cache --ext .ts,.tsx,.js,.jsx . --max-warnings 0",
    "type-check": "tsc --noEmit --incremental",
    "type-check:watch": "tsc --noEmit --incremental --watch",
    "validate": "npm run type-check && npm run lint:strict",
    "validate:quick": "npm run type-check && npm run lint",
    "pre-dev": "npm run validate:quick && echo 'âœ… All checks passed! Starting development server...'",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:syntax": "node scripts/syntax-check.js",
    "test:readability": "node scripts/test-input-readability.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:cross-device": "playwright test --project=mobile-safari-iphone-12 --project=mobile-chrome-pixel-5 --project=tablet-chrome --project=chromium-desktop",
    "test:mobile": "playwright test --project=mobile-safari-iphone-12 --project=mobile-safari-iphone-se --project=mobile-chrome-pixel-5",
    "test:visual": "playwright test --grep='Visual Regression'",
    "test:performance": "playwright test __tests__/e2e/performance.spec.ts",
    "test:all": "npm run test:ci && npm run test:e2e",
    "lighthouse": "lhci autorun",
    "lighthouse:ci": "lhci autorun --assert",
    "performance:report": "node scripts/generate-performance-report.js",
    "performance:monitor": "npm run lighthouse && npm run performance:report",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "check-all": "npm run test:syntax && npm run validate && npm run security:audit",
    "check-readability": "npm run test:readability",
    "fix-critical": "node scripts/fix-critical-issues.js",
    "quick-fix": "npm run fix-critical && npm run lint:fix",
    "clean": "rm -rf .next dist build node_modules/.cache",
    "clean:all": "npm run clean && rm -rf node_modules && npm install",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@supabase/supabase-js": "^2.89.0",
    "clsx": "2.1.1",
    "critters": "0.0.23",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.562.0",
    "next": "^16.1.1",
    "next-pwa": "^5.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "recharts": "^3.6.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "3.4.0"
  },
  "devDependencies": {
    "@lhci/cli": "0.15.1",
    "@playwright/test": "1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "30.0.0",
    "@types/jest-axe": "3.5.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "10.4.23",
    "axe-playwright": "2.2.2",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "fast-check": "4.5.3",
    "jest": "^30.2.0",
    "jest-axe": "10.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "lighthouse": "12.8.2",
    "playwright": "1.57.0",
    "postcss-cli": "11.0.1",
    "tailwindcss": "^4",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5",
    "web-vitals": "5.1.0"
  }
}
