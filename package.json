{
  "name": "orka-ppm-v2",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered Project Portfolio Management System",
  "author": "Stefan",
  "keywords": [
    "ppm",
    "project-management",
    "ai",
    "nextjs",
    "typescript"
  ],
  "scripts": {
    "dev": "next dev --turbo",
    "dev:webpack": "next dev --webpack",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:fast": "next build --no-lint",
    "start": "next start",
    "lint": "eslint --cache",
    "type-check": "tsc --noEmit --incremental",
    "lint:fix": "eslint --fix . --cache",
    "validate": "npm run type-check && npm run lint",
    "pre-dev": "npm run validate && echo 'âœ… All checks passed! Starting development server...'",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage",
    "test:syntax": "node scripts/syntax-check.js",
    "test:readability": "node scripts/test-input-readability.js",
    "check-all": "npm run test:syntax && npm run validate",
    "check-readability": "npm run test:readability",
    "fix-critical": "node scripts/fix-critical-issues.js",
    "quick-fix": "npm run fix-critical && npm run lint:fix"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@supabase/supabase-js": "^2.89.0",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.562.0",
    "next": "^16.1.1",
    "next-pwa": "^5.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "recharts": "^3.6.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/next-pwa": "^5.6.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "tailwindcss": "^4",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5"
  }
}
