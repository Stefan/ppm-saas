{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": false,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/components/ai": [
        "./components/ai"
      ],
      "@/components/navigation": [
        "./components/navigation"
      ],
      "@/components/offline": [
        "./components/offline"
      ],
      "@/components/onboarding": [
        "./components/onboarding"
      ],
      "@/components/shared": [
        "./components/shared"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/lib/ai": [
        "./lib/ai"
      ],
      "@/lib/api": [
        "./lib/api"
      ],
      "@/lib/monitoring": [
        "./lib/monitoring"
      ],
      "@/lib/offline": [
        "./lib/offline"
      ],
      "@/lib/sync": [
        "./lib/sync"
      ],
      "@/lib/utils": [
        "./lib/utils"
      ],
      "@/lib/services": [
        "./lib/services"
      ],
      "@/lib/help-chat": [
        "./lib/help-chat"
      ],
      "@/lib/design-system": [
        "./lib/utils/design-system"
      ],
      "@/lib/performance": [
        "./lib/monitoring/performance-utils"
      ],
      "@/app/*": [
        "./app/*"
      ],
      "@/types/*": [
        "./types/*"
      ],
      "@/hooks/*": [
        "./hooks/*"
      ],
      "@/utils/*": [
        "./utils/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": [
      "node",
      "react",
      "react-dom",
      "jest",
      "jest-axe"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "playwright.config.ts",
    "jest.config.js",
    "jest.setup.js"
  ]
}
